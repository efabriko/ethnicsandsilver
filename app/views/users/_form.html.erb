<section class="container">

  <%= form_with(model: user, local: true) do |form| %>
    <% if user.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

        <ul>
          <% user.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <form>
      <div class="form-group row">
        <%= form.label :first_name, class: "col-sm-2 col-form-label" %>
        <%= form.text_field :first_name, class: "form-control col-sm-4", placeholder: "First name" %>
      </div>

      <div class="form-group row">
        <%= form.label :last_name, class: "col-sm-2 col-form-label" %>
        <%= form.text_area :last_name, class: "form-control col-sm-4", placeholder: "Last name" %>
      </div>

      <div class="form-group row">
        <%= form.label :email, class: "col-sm-2 col-form-label" %>
        <%= form.text_field :email, class: "form-control col-sm-4", placeholder: "email" %>
      </div>



      <div class="actions">
        <%= form.submit :Submit, class: "btn btn-primary" %>
      </div>
    </form>
    <br>

  <% end %>

</section>
