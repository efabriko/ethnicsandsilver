<!-- User show section starts here -->
<section class="container">

  <div class="row">
    <div class="col col-lg-2">
      <strong>First name:</strong>
    </div>
    <div class="col col-lg-2">
      <%= @user.first_name %>
    </div>
  </div>

  <div class="row">
    <div class="col col-lg-2">
      <strong>Last name:</strong>
    </div>
    <div class="col col-lg-2">
      <%= @user.last_name %>
    </div>
  </div>

  <div class="row">
    <div class="col col-lg-2">
      <strong>Email:</strong>
    </div>
    <div class="col col-lg-2">
      <%= @user.email %>
    </div>
  </div>
  <br>

  <%= link_to 'Edit', edit_user_path(@user) %> |
  <%= link_to 'Back', users_path %>

</section>
