<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <form>
    <div class="form-group row">
      <%= form.label :name, class: "col-sm-2 col-form-label" %>
      <%= form.text_field :name, class: "form-control col-sm-4", placeholder: "Name" %>
    </div>

    <div class="form-group row">
      <%= form.label :description, class: "col-sm-2 col-form-label" %>
      <%= form.text_area :description, class: "form-control col-sm-4", placeholder: "Description" %>
    </div>

    <div class="form-group row">
      <%= form.label :image_url, class: "col-sm-2 col-form-label" %>
      <%= form.text_field :image_url, class: "form-control col-sm-4", placeholder: "Image url" %>
    </div>

    <div class="form-group row">
      <%= form.label :price, class: "col-sm-2 col-form-label" %>
      <%= form.text_field :price, class: "form-control col-sm-4", placeholder: "Price" %>
    </div>

    <div class="actions">
      <%= form.submit :Submit, class: "btn btn-primary" %>
    </div>
  </form>
  <br>

<% end %>
